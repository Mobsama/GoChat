<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.mob.gochat">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GoChat"
        android:largeHeap="true"
        android:hardwareAccelerated="true"
        tools:targetApi="n">
        <activity android:name=".ChatActivity"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".User.ForgotPassActivity"
            android:parentActivityName=".User.LoginActivity" />

        <activity android:name=".Main2Activity"/>

        <activity
            android:name=".User.RegisterActivity"
            android:parentActivityName=".User.LoginActivity" />
        <activity android:name=".User.LoginActivity" />

        <service
            android:name=".WebSocket.JWebSocketClientService"
            android:enabled="true" />
    </application>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>