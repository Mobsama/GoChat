<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_4"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/dp_10"
        android:id="@+id/chat_iv_item_mine"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:background="@drawable/img_avatar_bg"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chat_tv_item_mine_time"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/chat_iv_item_mine"
        android:layout_marginEnd="@dimen/dp_4"
        android:textColor="@color/grey_400"
        android:textSize="9sp"
        tools:ignore="SmallSp" />

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/chat_iv_item_mine"
        android:layout_marginEnd="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center_vertical"
        android:id="@+id/chat_tv_item_mine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="310dp"
        android:textColor="@color/white"
        android:textIsSelectable="true"
        android:background="@drawable/chat_item_right"
        android:visibility="gone"/>

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/chat_iv_item_mine"
        android:layout_marginEnd="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:id="@+id/chat_pic_item_mine"
        android:gravity="center_vertical"
        android:visibility="gone"/>

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/chat_iv_item_mine"
        android:layout_marginEnd="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_20"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chat_voice_item_mine"
        android:scaleType="center"
        android:gravity="center_vertical"
        android:background="@drawable/chat_item_right"
        android:src="@drawable/ic_voice2_white_24dp"
        app:tint="@color/white"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>